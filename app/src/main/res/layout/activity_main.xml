<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="343dp"
            android:layout_height="549dp"
            android:layout_x="32dp"
            android:layout_y="169dp"
            app:srcCompat="@color/bela"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="239dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="168dp"
            android:layout_x="120dp"
            android:layout_y="123dp"
            android:background="@drawable/logo"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="205dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="287dp"
            android:layout_height="61dp"
            android:layout_x="59dp"
            android:layout_y="470dp"
            android:background="@drawable/login_txt"
            android:ems="10"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/pozadinaLogin"
            android:textColorHint="@color/pozadinaLogin"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="434dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="191dp"
            android:layout_height="65dp"
            android:layout_x="109dp"
            android:layout_y="571dp"
            android:background="@drawable/login_btn"
            android:onClick="prijava"
            android:text="Prijavi se"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="556dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="287dp"
            android:layout_height="61dp"
            android:layout_x="59dp"
            android:layout_y="381dp"
            android:background="@drawable/login_txt"
            android:ems="10"
            android:gravity="center"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/pozadinaLogin"
            android:textColorHint="@color/pozadinaLogin"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="434dp" />

</AbsoluteLayout>